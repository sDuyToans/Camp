    <% layout('layouts/boilerplate') %> 
   <div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required> 
                <div class="valid-feedback">
                    Look Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    Look Good!
                </div>
            </div>
            <!-- <input type="file" name="image" id="" multiple> -->
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="image" id="image" multiple>
                </div>
            </label>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                    <div class="valid-feedback">
                        Look Good!
                    </div>
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="desciption">Description</label>
                <textarea class="form-control" type="text" id="desciption" name="campground[desciption]" required></textarea> 
                <div class="valid-feedback">
                    Look Good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">All Campgrouns</a>
    </div>
   </div>

   